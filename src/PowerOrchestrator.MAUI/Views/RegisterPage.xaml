<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PowerOrchestrator.MAUI.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:viewmodels="clr-namespace:PowerOrchestrator.MAUI.ViewModels"
    x:DataType="viewmodels:RegisterViewModel"
    Title="Register"
    BackgroundColor="{DynamicResource Surface}"
    Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="30" RowSpacing="20">
            
            <!-- Logo and Branding -->
            <StackLayout Grid.Row="0" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,40,0,20">
                <Ellipse 
                    Fill="{DynamicResource Primary}"
                    WidthRequest="80"
                    HeightRequest="80"
                    HorizontalOptions="Center" />
                
                <StackLayout Spacing="5" HorizontalOptions="Center">
                    <Label 
                        Text="âš¡ PowerOrchestrator"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource OnSurface}"
                        HorizontalOptions="Center" />
                    <Label 
                        Text="Create Your Account"
                        FontSize="16"
                        TextColor="{DynamicResource Outline}"
                        HorizontalOptions="Center" />
                </StackLayout>
            </StackLayout>

            <!-- Registration Form -->
            <material:CardView Grid.Row="1" BackgroundColor="{DynamicResource SurfaceContainer}" CornerRadius="16" Padding="0">
                <StackLayout Padding="30" Spacing="20">
                    
                    <Label 
                        Text="Join PowerOrchestrator"
                        FontSize="24"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource OnSurface}"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10" />

                    <!-- Username Field -->
                    <material:TextField
                        Title="Username"
                        Icon="{x:Static m:MaterialIcons.Person}"
                        Text="{Binding Username}"
                        Style="{DynamicResource FilledTextFieldStyle}"
                        BackgroundColor="{DynamicResource SurfaceContainerHigh}" />

                    <!-- Email Field -->
                    <material:TextField
                        Title="Email"
                        Icon="{x:Static m:MaterialIcons.Email}"
                        Text="{Binding Email}"
                        Keyboard="Email"
                        Style="{DynamicResource FilledTextFieldStyle}"
                        BackgroundColor="{DynamicResource SurfaceContainerHigh}" />

                    <!-- Password Field -->
                    <material:TextField
                        Title="Password"
                        Icon="{x:Static m:MaterialIcons.Lock}"
                        Text="{Binding Password}"
                        IsPassword="True"
                        Style="{DynamicResource FilledTextFieldStyle}"
                        BackgroundColor="{DynamicResource SurfaceContainerHigh}" />

                    <!-- Confirm Password Field -->
                    <material:TextField
                        Title="Confirm Password"
                        Icon="{x:Static m:MaterialIcons.Lock}"
                        Text="{Binding ConfirmPassword}"
                        IsPassword="True"
                        Style="{DynamicResource FilledTextFieldStyle}"
                        BackgroundColor="{DynamicResource SurfaceContainerHigh}" />

                    <!-- Terms and Conditions -->
                    <material:CheckBox 
                        Text="I agree to the Terms and Conditions"
                        IsChecked="{Binding AcceptTerms}"
                        TextColor="{DynamicResource OnSurface}"
                        CheckedColor="{DynamicResource Primary}" />

                    <!-- Register Button -->
                    <material:Button 
                        Text="Create Account"
                        Icon="{x:Static m:MaterialIcons.PersonAdd}"
                        Command="{Binding RegisterCommand}"
                        Style="{DynamicResource FilledButtonStyle}"
                        IsLoading="{Binding IsBusy}"
                        Margin="0,10,0,0" />

                </StackLayout>
            </material:CardView>

            <!-- Login Link -->
            <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label 
                    Text="Already have an account?"
                    FontSize="14"
                    TextColor="{DynamicResource OnSurface}" />
                <Label 
                    Text="Sign in"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource Primary}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

        </Grid>
    </ScrollView>

</ContentPage>