<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Responsive Spacing Values -->
    <x:Double x:Key="SpacingXSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">16</x:Double>
    <x:Double x:Key="SpacingLarge">24</x:Double>
    <x:Double x:Key="SpacingXLarge">32</x:Double>

    <!-- Responsive Font Sizes -->
    <x:Double x:Key="FontSizeCaption">12</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeSubheading">16</x:Double>
    <x:Double x:Key="FontSizeHeading">20</x:Double>
    <x:Double x:Key="FontSizeDisplay">24</x:Double>

    <!-- Platform-Specific Styles -->
    <Style x:Key="ResponsiveCardStyle" TargetType="Grid">
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android,iOS" Value="12" />
                    <On Platform="WinUI,MacCatalyst" Value="16" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="RowSpacing">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="8" />
                    <On Platform="WinUI,MacCatalyst" Value="12" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="ColumnSpacing">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="8" />
                    <On Platform="WinUI,MacCatalyst" Value="12" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Responsive Button Style -->
    <Style x:Key="ResponsiveButtonStyle" TargetType="Button">
        <Setter Property="HeightRequest">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="44" />
                    <On Platform="WinUI,MacCatalyst" Value="36" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android,iOS" Value="16,12" />
                    <On Platform="WinUI,MacCatalyst" Value="20,8" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="16" />
                    <On Platform="WinUI,MacCatalyst" Value="14" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Responsive Text Field Style -->
    <Style x:Key="ResponsiveTextFieldStyle" TargetType="Entry">
        <Setter Property="HeightRequest">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="48" />
                    <On Platform="WinUI,MacCatalyst" Value="32" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="16" />
                    <On Platform="WinUI,MacCatalyst" Value="14" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Responsive List Item Style -->
    <Style x:Key="ResponsiveListItemStyle" TargetType="Grid">
        <Setter Property="MinimumHeightRequest">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android,iOS" Value="56" />
                    <On Platform="WinUI,MacCatalyst" Value="48" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android,iOS" Value="16,12" />
                    <On Platform="WinUI,MacCatalyst" Value="12,8" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Device Idiom Specific Styles -->
    <Style x:Key="CompactLayoutStyle" TargetType="StackLayout">
        <Setter Property="Spacing">
            <Setter.Value>
                <OnIdiom x:TypeArguments="x:Double">
                    <OnIdiom.Phone>8</OnIdiom.Phone>
                    <OnIdiom.Tablet>12</OnIdiom.Tablet>
                    <OnIdiom.Desktop>16</OnIdiom.Desktop>
                </OnIdiom>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding">
            <Setter.Value>
                <OnIdiom x:TypeArguments="Thickness">
                    <OnIdiom.Phone>16</OnIdiom.Phone>
                    <OnIdiom.Tablet>24</OnIdiom.Tablet>
                    <OnIdiom.Desktop>32</OnIdiom.Desktop>
                </OnIdiom>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Navigation Bar Height -->
    <OnPlatform x:Key="NavigationBarHeight" x:TypeArguments="x:Double">
        <On Platform="Android" Value="56" />
        <On Platform="iOS" Value="44" />
        <On Platform="WinUI" Value="40" />
        <On Platform="MacCatalyst" Value="40" />
    </OnPlatform>

    <!-- Safe Area Insets -->
    <OnPlatform x:Key="SafeAreaInsets" x:TypeArguments="Thickness">
        <On Platform="Android" Value="0" />
        <On Platform="iOS" Value="0,44,0,34" />
        <On Platform="WinUI" Value="0" />
        <On Platform="MacCatalyst" Value="0" />
    </OnPlatform>

    <!-- Accessibility Styles -->
    <Style x:Key="AccessibleHeadingStyle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeHeading}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="AutomationProperties.IsInAccessibleTree" Value="True" />
    </Style>

    <Style x:Key="AccessibleBodyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
        <Setter Property="AutomationProperties.IsInAccessibleTree" Value="True" />
    </Style>

    <!-- High Contrast Support -->
    <Style x:Key="HighContrastBorderStyle" TargetType="Frame">
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

</ResourceDictionary>